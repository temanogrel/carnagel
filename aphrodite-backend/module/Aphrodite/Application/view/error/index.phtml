<?php
echo $this->exception->getMessage() . PHP_EOL;
echo $this->exception->getTraceAsString() . PHP_EOL;


echo PHP_EOL;
echo PHP_EOL;

$e = $this->exception->getPrevious();

while ($e) {
    echo $e->getMessage() . PHP_EOL;
    echo $e->getTraceAsString() . PHP_EOL;


    echo PHP_EOL;
    echo PHP_EOL;

    $e = $e->getPrevious();
}

